<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="" />
	<package name="basicstruts2" extends="struts-default">
		<action name="index">
			<result>/pages/index.jsp</result>
		</action>
		<action name="about">
			<result>/pages/about.jsp</result>
		</action>
		<action name="contact">
			<result>/pages/contact.jsp</result>
		</action>
		<action name="learn-more">
			<result>/pages/learn-more.jsp</result>
		</action>
		<action name="sign-in" class="it.d4nguard.d20webtools.controller.SignIn">
			<result name="success">/pages/index.jsp</result>
			<result name="error">/pages/index.jsp</result>
			<result name="login">/pages/login.jsp</result>
		</action>
		<action name="logout" class="it.d4nguard.d20webtools.controller.SignIn" method="logout">
			<result>/pages/index.jsp</result>
		</action>
		<action name="join-room-init" class="it.d4nguard.d20webtools.controller.RoomManager">
			<result>/pages/join-room.jsp</result>
		</action>
		<action name="new-room" class="it.d4nguard.d20webtools.controller.RoomManager" method="newRoom">
			<result name="success">/pages/room.jsp</result>
			<result name="error">/pages/index.jsp</result>
		</action>
		<action name="join-room" class="it.d4nguard.d20webtools.controller.RoomManager" method="joinRoom">
			<result>/pages/room.jsp</result>
		</action>
	</package>
</struts>
